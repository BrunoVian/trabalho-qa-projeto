<!-- res/layout/custom_dialog.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:background="@drawable/message_atencao">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:src="@drawable/alterarsenha"
        android:layout_gravity="center"


        />

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alterar Senha"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="5dp"

        android:textColor="@android:color/black"/>


    <TextView
        android:id="@+id/dialog_message1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:text="Senha:"
        android:textSize="18sp"
        android:paddingTop="5dp"
        android:paddingBottom="15dp"
        android:layout_marginHorizontal="10dp"
        android:textColor="@android:color/black"/>



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        app:boxBackgroundColor="@android:color/white"
        app:boxStrokeColor="@color/fundo_login"
        app:boxStrokeWidth="2dp"
        app:endIconMode="custom"
        app:hintEnabled="true"
        app:hintAnimationEnabled="false">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edtSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:background="@drawable/border_fundo_edit_text"
        android:hint="Senha"
        android:drawableEnd="@drawable/baseline_remove_red_eye_24"
        />
</com.google.android.material.textfield.TextInputLayout>


    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:text="Confirmar Senha:"
        android:textSize="18sp"
        android:paddingTop="5dp"
        android:paddingBottom="15dp"
        android:textColor="@android:color/black"
        android:layout_marginHorizontal="10dp"/>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutSenhaConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        app:boxBackgroundColor="@android:color/white"
        app:boxStrokeColor="@color/fundo_login"
        app:boxStrokeWidth="2dp"
        app:endIconMode="custom"
        app:hintEnabled="true"
        app:hintAnimationEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtSenhaConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:background="@drawable/border_fundo_edit_text"
            android:hint="Senha"
            android:drawableEnd="@drawable/baseline_remove_red_eye_24"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">

        <Button
            android:id="@+id/button_yes"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:text="Alterar"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="@drawable/border_button_amarelo"/>

        <Button
            android:id="@+id/button_no"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:text="Cancelar"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="@drawable/border_button_vermelho"/>

    </LinearLayout>
</LinearLayout>
