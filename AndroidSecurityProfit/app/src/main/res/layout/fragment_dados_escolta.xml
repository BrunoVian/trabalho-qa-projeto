<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundo_telas"
    android:orientation="vertical"
    tools:context=".ui.escolta.DadosEscoltaFragment"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="10dp"
                android:text="Cliente de Origem:"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />


            <GridView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/forma_edit_text"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:horizontalSpacing="10dp"
                android:verticalSpacing="10dp"

                />

            <Space
                android:layout_width="match_parent"

                android:layout_height="15dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/gray_escuro" />

            <Space
                android:layout_width="match_parent"

                android:layout_height="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="10dp"
                android:text="Agentes:"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />



            <GridView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/forma_edit_text"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:horizontalSpacing="10dp"
                android:verticalSpacing="10dp"

                />


            <Space
                android:layout_width="match_parent"

                android:layout_height="15dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/gray_escuro" />

            <Space
                android:layout_width="match_parent"

                android:layout_height="15dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="10dp"
                android:text="VeÃ­culo:"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />



            <GridView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/forma_edit_text"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:horizontalSpacing="10dp"
                android:verticalSpacing="10dp"

                />
            <Space
                android:layout_width="match_parent"

                android:layout_height="15dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/gray_escuro" />

            <Space
                android:layout_width="match_parent"

                android:layout_height="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="10dp"
                android:text="Cliente de Destino:"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />



            <GridView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/forma_edit_text"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:horizontalSpacing="10dp"
                android:verticalSpacing="10dp"

                />

            <Space
                android:layout_width="match_parent"

                android:layout_height="15dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/gray_escuro" />

            <Space
                android:layout_width="match_parent"

                android:layout_height="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:text="Data e Hora da Viagem:"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />


            <EditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:inputType="text"
                android:background="@drawable/border_fundo_edit_text"
                android:enabled="false"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:text="Data e Hora da Abertura:"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/edtNomeP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:inputType="text"
                android:background="@drawable/border_fundo_edit_text"
                android:enabled="false"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="50dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnSalvarU"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_button_verde"
                        android:text="Iniciar Viagem"
                        android:textColor="@color/white"/>

                    <Button
                        android:id="@+id/btnCancelarU"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_button_vermelho"
                        android:text="Cancelar"
                        android:textColor="@color/white"/>

                </LinearLayout>



            </LinearLayout>




        </LinearLayout>

    </ScrollView>


</LinearLayout>


